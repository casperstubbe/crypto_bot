{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python cron.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "TELEGRAM_BOT_TOKEN": "${{TELEGRAM_BOT_TOKEN}}",
    "TELEGRAM_CHAT_ID": "${{TELEGRAM_CHAT_ID}}"
  }
}
